<h1>Users</h1>
<div class="row">
	<% @users.each do |user| %>
	<div class="col-lg-6 offset-3">
		<div class="media mb-3">
			<div class="align-self-center">
				<%#= link_to gravatar_for(user), (user_path(user.id)) %>
			</div>
			<div class="media-body ml-2">
				<%= image_tag('avator/icon1.png') %>
				<h3><%= link_to user.name, (user_path(user.id)) %></h3>
				<h3><%= user.email %></h3>

				<%# if current_user.admin? %>
					<%# if !current_user?(user) %>
						<%#= link_to "Delete", user_path(user.id), method: :delete, class: "btn btn-danger" %>
					<%# end %>
				<%# end %>
			</div>

		</div>
	</div>
	<% end %>

</div>