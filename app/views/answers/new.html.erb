first stage

<h1 style="color: green"><%= @category.title %></h1>




<div class="row">
	<div class="container col-lg-6">
		<div class="jumbotron">
			<%= @word.content %>
		</div>
	</div>
	<div class="container col-lg-6">
		<div class="jumbotron">
			<% @word.choices.shuffle.each do |ch| %>

				<%= form_for ([@user,@lesson,@answer]) do |f| %>
					<%= hidden_field_tag :choice_id, ch.id %>
					<%= hidden_field_tag :word_id, @word.id %>
					<%= f.submit ch.content, class: "btn btn-dark" %>
				<% end %>

			<% end %>
		</div>
	</div>
</div>