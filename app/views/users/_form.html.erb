<%= form_for @user do |f| %>
<%= render "shared/error_messages", object: f.object %>

<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name, class: "form-control", placeholder: "ENTER YOUR NAME" %>				
</div>

